<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <HBox spacing="5.0">
         <children>
            <Label text="Время показа одного человека:" />
            <TextField fx:id="watchTimeMs" />
            <Label text="мс" />
         </children>
      </HBox>
      <Label text="Фильтры (по умолчанию нет):" />
      <HBox fx:id="companyHBox" spacing="5.0">
         <children>
            <Label text="Место работы: " />
         </children>
      </HBox>
      <HBox fx:id="eventsHBox" spacing="5.0">
         <children>
            <Label text="Мероприятия:" />
         </children>
      </HBox>
      <HBox alignment="TOP_RIGHT" spacing="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#startWatch" text="Начать просмотр" />
            <Button mnemonicParsing="false" onAction="#cancel" text="Назад" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
